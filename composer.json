{
  "name": "vanderlee/php-sentence",
  "description": "Simple text sentence splitting and counting. Supports at least english, german and dutch, possibly more.",
  "type": "library",
  "keywords": [
    "sentence",
    "split",
    "count",
    "boundary",
    "disambiguation",
    "segmentation"
  ],
  "homepage": "https://github.com/vanderlee/php-sentence.git",
  "license": "MIT",
  "support": {
    "issues": "https://github.com/vanderlee/php-sentence/issues",
    "source": "https://github.com/vanderlee/php-sentence"
  },
  "require": {
    "php": ">=5.4.0",
    "ext-mbstring": "*",
    "ext-ctype": "*"
  },
  "autoload": {
    "psr-4": {
      "Vanderlee\\Sentence\\": "src"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^3.6.12"
  },
  "scripts": {
    "test": "vendor/bin/phpunit"
  }
}
